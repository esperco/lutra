{
  "manifest_version": 2,
  "name": "Esper",
  "version": "0.0.2",

  "description": "Link between Gmail and Google Calendar",

  "icons": {
    "16": "img/icon16.png",
    "64": "img/icon64.png",
    "128": "img/icon128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "http://127.0.0.1/*",
        "http://localhost/*",
        "https://app.esper.com/*",
        "https://www.google.com/calendar/*",
        "https://mail.google.com/mail/*"
      ],
      "css": ["css/content-script.css"],
      "js": ["js/content-script.js"],

      "run_at": "document_end"
    }
  ],

  "externally_connectable": {
    "matches": [
      "http://127.0.0.1/*",
      "http://localhost/*",
      "https://app.esper.com/*",
      "https://www.google.com/calendar/*",
      "https://mail.google.com/mail/*"
    ]
  },

  "web_accessible_resources": [
    "js/gmail-is.js",
    "js/gcal-is.js",
    "css/injected-script.css",
    "img/*"
  ],

  "permissions": [
    "tabs",
    "storage"
  ]
}
