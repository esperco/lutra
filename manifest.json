{
  "manifest_version": 2,
  "name": "Esper",
  "version": "1.0",

  "description": "Link between Gmail and Google Calendar",

  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "https://app.esper.com/*",
        "https://www.google.com/calendar/*",
        "https://mail.google.com/mail/*"
      ],
      "css": ["css/content-script.css"],
      "js": ["js/content-script.js"],

      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    "js/injected-script.js"
  ],

  "permissions": [
    "tabs",
    "storage"
  ]
}
