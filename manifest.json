{
  "manifest_version": 2,
  "name": "Esper",
  "version": "1.0",

  "description": "Link between Gmail and Google Calendar",

  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "https://app.esper.com/*",
        "https://www.google.com/calendar/*",
        "https://mail.google.com/mail/*"
      ],
      "css": ["css/content-script.css"],
      "js": ["js/content-script.js"],

      "run_at": "document_end"
    }
  ],

  "externally_connectable": {
    "matches": [
      "http://localhost/*",
      "https://app.esper.com/*",
      "https://www.google.com/calendar/*",
      "https://mail.google.com/mail/*"
    ]
  },

  "web_accessible_resources": [
    "js/gmail-is.js",
    "js/gcal-is.js",
    "css/injected-script.css",
    "img/*"
  ],

  "permissions": [
    "tabs",
    "storage"
  ]
}
