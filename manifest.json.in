{
  "manifest_version": 2,
  "name": "Esper",
  "short_name": "Esper",
  "version": "@@VERSION@@",

  "description": "Link between Gmail and Google Calendar",

  "icons": {
    "16": "img/icon16.png",
    "64": "img/icon64.png",
    "128": "img/icon128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "http://127.0.0.1/*",
        "http://localhost/*",
        "http://ec2-23-20-70-85.compute-1.amazonaws.com/*",
        "https://app.esper.com/*",
        "https://www.google.com/calendar/*",
        "https://mail.google.com/mail/*"
      ],
      "js": ["js/content-script.js"],

      "run_at": "document_end"
    }
  ],

  "externally_connectable": {
    "matches": [
      "http://127.0.0.1/*",
      "http://localhost/*",
      "http://ec2-23-20-70-85.compute-1.amazonaws.com/*",
      "https://app.esper.com/*",
      "https://www.google.com/calendar/*",
      "https://mail.google.com/mail/*"
    ]
  },

  "web_accessible_resources": [
    "js/gmail-is.js",
    "js/gcal-is.js",
    "css/esper.css",
    "img/*"
  ],

  "permissions": [
    "tabs",
    "storage"
  ]
}
