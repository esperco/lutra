<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <title>Esper</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="/assets/css/custom-bootstrap.css" rel="stylesheet" media="screen">
    <link href="/assets/css/bootstrap-lightbox.min.css" rel="stylesheet" media="screen">
    <link href="/assets/css/app.css" rel="stylesheet" media="screen">
  </head>

  <body>

    <button id="dummy" class="hide"></button>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <a class="navbar-brand" href="#">Esper</a>
        <ul class="nav nav-tabs pull-right">
          <li class="logged-out">
            <a href="#!login">
              Login
            </a>
          </li>
          <li class="hide logged-in dropdown">
            <a data-toggle="dropdown"
               class="dropdown-toggle"
               href="#">
              <span id="logged-in-email">@</span>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <a href="#!logout">Logout</a>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </div>

    <div id="login-page" class="hide">
      <div class="container">
        <div class="row">
          <div class="span4"></div>
          <div class="login-form span4">
            <h2>Esper Login</h2>
            <fieldset>
              <div class="clearfix">
                <input id="login-email" type="text"
                       placeholder="Email">
              </div>
              <div class="clearfix">
                <input id="login-password" type="password"
                       placeholder="Password">
              </div>
              <button id="login-button" class="btn btn-default primary">
                Sign in
              </button>
            </fieldset>
          </div>
          <div class="span4"></div>
        </div>
      </div>
    </div>

    <div id="home-page" class="hide">
      <div class="container">
        <div class="row">
          <div class="span12 queue-tab-area">

            <div class="hide" id="status"></div>
            <div class="hide" id="hidden-status"></div>

            <ul class="nav nav-tabs">
              <li id="active-tasks-tab">
                <a href="#" id="active-tasks-tab-link">
                  Tasks
                </a>
              </li>
              <!-- add more tabs as needed -->
            </ul>
            <div id="active-tasks-tab-content" class="hide"></div>
            <!-- add more hidden tab content views as needed -->
          </div>
        </div>
      </div>
    </div>

    <div id="task-page" class="hide">
      <div class="container">
        <div class="row">
          <div class="span12">
            <div id="select-task-category">
              Select category
            </div>
            <div id="sched-task-body">
              <div id="sched-progress-tabs">
                <span class="sched-progress-tab">Step 1. Parameters</span>
                <span class="sched-progress-tab">Step 2. Coordinate</span>
                <span class="sched-progress-tab">Step 3. Confirm</span>
              </div>
              <div id="sched-step1-tab" class="hide"></div>
              <div id="sched-step2-tab" class="hide"></div>
              <div id="sched-step3-tab"></div>
            </div>

            <div id="q-task-body" class="hide">
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/can.min.js"></script>
    <script src="/assets/js/sha1.js"></script>
    <script src="/assets/js/bootstrap-lightbox.min.js"></script>
    INCLUDES
    <script>
      $(function(){
        var includes = [
          "sched-step3-tab"
        ];
        for (var i in includes) {
          var id = includes[i];
          $("#" + id).load("/assets/html/" + id + ".html");
        }
      });
    </script>
  </body>
</html>
