<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <title>Esper</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="google-site-verification" content="xfwpmNt2I3wd1UzPCkvTnfjmJyuyjiKBFA-9WGTHqXQ" />
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/img/favicon.ico" type="image/x-icon">
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="/assets/css/custom-bootstrap.css" rel="stylesheet" media="screen">
    <link href="/assets/css/app.css" rel="stylesheet" media="screen">
    <link href="/assets/css/fonts.css" rel="stylesheet" type="text/css" charset="utf-8">
    <link href="/assets/css/animate.min.css" rel="stylesheet">
    <link href="/assets/css/font-awesome.css" rel="stylesheet">
    <link href="/assets/css/fullcalendar.css" rel="stylesheet">
    <link href="/assets/css/fullcalendar.print.css" rel="stylesheet" media="print">
    <link href="/assets/css/datepicker.css" rel="stylesheet">

    <!-- Mixpanel JS loader file, copied from js/mixpanel.js -->
    <script type="text/javascript" href="/assets/js/mixpanel.js"></script>
  </head>

  <body>

    <div id="loading">
      <div id="loading-box">
        <img id="loading-icon" src="/assets/img/loading.gif">
        <div id="loading-text" class="ellipsis"></div>
      </div>
    </div>

    <!-- <div id="global-status" class="animated"></div> -->

    <div id="test-page" class="hide test-page">
      <div class="navbar-push container scrollable">
        <div id="test-content" class="row">
        </div>
      </div>
    </div>

    <div id="login-page" class="hide login-page">
      <div class="login-container">
        <div class="logo-container">
          <div id="login-hero-mark" class="animated fadeInUp">
            <img class="svg hero-mark" src="/assets/img/esper-mark.svg">
          </div>
        </div>
        <div id="login-error-message" class="animated hide"></div>
        <form class="login-form" role="form">
          <div class="form-group">
            <div class="text-field-label">Email address</div>
            <input type="email" id="login-email" class="form-control" tabindex=1>
          </div>
          <div class="form-group">
            <div class="text-field-label">Password</div>
            <a href="#!request-password" id="forgot-password">Forgot password?</a>
            <input type="password" id="login-password" class="form-control" tabindex=2>
          </div>
          <button id="login-button" class="btn btn-primary login-btn" tabindex=3>
            LOG IN
          </button>
        </form>
        <div class="login-footer">
          <div>
            <img class="svg hero-word" src="/assets/img/esper-word.svg">
          </div>
          <div class="copyright">&copy; 2014 Esper Technologies, Inc. All rights reserved.</div>
          <div class="made">Made in Palo Alto, CA</div>
        </div>
      </div>
      <div class="login-footer-push"></div>
    </div>

    <div id="request-password-page" class="hide request-password-page">
      @@request-password.html@@
    </div>

    <div id="reset-password-page" class="hide reset-password-page">
      @@reset-password.html@@
    </div>

    <div id="email-verify-page" class="hide email-verify-page">
      @@email-verify.html@@
    </div>

    <div id="home-page" class="hide home-page">
      @@onboarding.html@@
    </div>

    <div id="settings-page" class="hide settings-page">
      @@settings.html@@
    </div>

    <div id="task-page" class="hide task-page scrollable">
      @@meeting-workflow.html@@
    </div>

    <!-- API key activated by jeff@esper.co -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA1NI4SRYse6mchKKKUTYIvorssNcWju-g&sensor=false"></script>

    <!-- Pusher client library -->
    <script src="https://d3dy5gmtp8yhk7.cloudfront.net/2.1/pusher.min.js"></script>

    <script src="/assets/js/flags.js"></script>
    INCLUDES
  </body>
</html>
